@model ChattApp.Models.LoginVm

@{
    ViewData["Title"] = "Login";
}

<div class="text-center"><h2>Login</h2></div>
<div class="text-danger">
    <div asp-validation-summary="All"></div>
</div>
<form asp-action="Login" method="post">
    <div class="form-group col-12 col-md-6 offset-md-3 py-3">
        <input asp-for="UserName" placeholder="User Name" class="form-control" />
        @* <span asp-validation-for="UserName" class="text-danger"></span> *@
    </div>
    <div class="form-group col-12 col-md-6 offset-md-3 py-3">
        <input asp-for="Password" placeholder="Password" class="form-control" />
        @* <span asp-validation-for="Password" class="text-danger"></span> *@
    </div>
    <div class="col-12 col-md-6 offset-md-3 py-3">
        <button type="submit" class="btn btn-primary w-100">Login</button>
    </div>
    <div class="text-center py-3">
        <a asp-action="Register" asp-controller="Auth">Don't have an account? Register</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}