@model ChattApp.Models.RegisterVm

@{
ViewData["Title"] = "Register";
}

<div class="text-center"><h2>Register</h2></div>

<form asp-action="Register" method="post">
    <div class="form-group col-12 col-md-6 offset-md-3 py-3">
        <input asp-for="UserName" placeholder="User Name" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group col-12 col-md-6 offset-md-3 py-3">
        <input asp-for="Password" placeholder="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group col-12 col-md-6 offset-md-3 py-3">
        <input asp-for="ConfirmPassword" placeholder="Repeat Password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="col-12 col-md-6 offset-md-3 py-3">
        <button type="submit" class="btn btn-primary w-100">Register</button>
    </div>
    <div class="text-center py-3">
        <a asp-action="Login" asp-controller="Auth">Already have an account? Log in</a>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
